<div class=" w-11/12 md:w-full bg-white py-5 sm:mb-4 px-5 px-10 sm:shadow rounded">
  <h2 class="text-gray-700 text-2xl  mb-4 sm:mb-0">Add Media File</h2>
</div>

<%=form_for(@media_file, :url => media_file_path, :method => 'post')   do |form| %>
  <div class="container mx-auto grid items-start  sm:grid-cols-1 md:grid-cols-1 lg:grid-cols-1 xl:grid-cols-2 md:mt-8 gap-8">



    <div class="w-11/12 md:w-full rounded shadow bg-white">

      <div class="w-full px-8 py-6 border-b border-gray-300">
        <div class="flex flex-col xl:w-3/5 lg:w-2/6 w-full">
          <%= form.label :name, :class => "pb-2 text-sm font-normal text-gray-800"%>
          <%= form.text_field :name, :placeholder => "Enter a file name", :class => "border border-gray-300 pl-3 py-3 shadow-sm rounded text-sm focus:outline-none focus:border-indigo-700 text-gray-800" %>

        </div>
        <div class="mt-6 flex flex-col w-full">
          <%= form.label :description, :class => "pb-2 text-sm font-normal text-gray-800" %>
          <%= form.text_area :description,  :rows => 5, :placeholder => "Enter a description", :class => "border border-gray-300 pl-3 py-2 shadow-sm rounded text-sm focus:outline-none focus:border-indigo-700 resize-none text-gray-800" %>

        </div>
        <div class="mt-6 flex flex-col w-full">
          <%= form.label :file_type, :class => "pb-2 text-sm font-normal text-gray-800" %>
          <%= form.select :file_type, MediaFile::MEDIA_TYPES , {}, {:class => "border border-gray-300 pl-3 py-2 shadow-sm rounded text-sm  focus:border-indigo-700 resize-none text-gray-800"} %>

        </div>
        <div class="mt-6 flex flex-col w-full">
          <%= form.label :file, :class => "pb-2 text-sm font-normal text-gray-800" %>
          <%= form.file_field :file, :class => "border border-gray-300 pl-3 py-2 shadow-sm rounded text-sm  focus:border-indigo-700 resize-none text-gray-800" %>
          <div class="mt-8 flex flex-col sm:flex-row sm:items-center w-full">

            <%= form.submit("Upload Media", {:class => "w-full sm:w-auto mb-4 sm:mb-0 sm:mr-4 py-2 px-3 rounded transition duration-150 ease-in-out flex items-center bg-blue-500 hover:bg-blue-600 focus:bg-blue-600 focus:outline-none text-sm text-white"})%>
            <%= link_to "Delete File", media_file_path(@media_file), :method => 'delete', :class => "w-full sm:w-auto mb-4 sm:mb-0 sm:mr-4 py-2 px-3 rounded transition duration-150 ease-in-out flex items-center bg-red-500 hover:bg-red-600 focus:bg-blue-600 focus:outline-none text-sm text-white" %>
          </div>
        </div>


      </div>


    </div>
    <div class="w-11/12 md:w-full align rounded shadow bg-white p-8 md:place-self-stretch row-start-1 lg:col-start-2">

      <div class="relative h-40 lg:h-full">

        <% if @media_file.file.attached?  %>
          <%= image_tag  @media_file.file, :class => "absolute inset-0 object-cover object-center w-full h-full"  %>
        <% else %>
          <%= image_tag  'https://via.placeholder.com/150', :class => "absolute inset-0 object-cover object-center w-full h-full"  %>
        <% end %>


      </div>


    </div>
  </div>



<% end %>


</div>